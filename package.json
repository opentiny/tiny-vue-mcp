{
  "name": "tiny-vue-mcp",
  "version": "1.0.0",
  "private": true,
  "description": "Monorepo for TinyVue components and applications",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "dev": "pnpm --filter tiny-vue-mcp-docs dev",
    "build": "pnpm --filter @opentiny/tiny-vue-mcp build",
    "pub": "pnpm --filter @opentiny/tiny-vue-mcp publish",
    "format": "prettier --write \"**/*.{ts,tsx,vue,js,jsx,json,md}\""
  },
  "pnpm": {
    "overrides": {
      "@opentiny/vue-common": "3.23.0-beta.1"
    }
  },
  "devDependencies": {
    "@types/node": "^18.18.5",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.49.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-vue": "^9.17.0",
    "prettier": "^3.0.3",
    "rimraf": "^5.0.1",
    "typescript": "~5.2.0",
    "vue-tsc": "^1.8.19"
  },
  "engines": {
    "node": ">=16.0.0",
    "pnpm": ">=8.0.0"
  }
}
